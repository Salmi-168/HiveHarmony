<Application
    x:Class="HiveHarmony.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:HiveHarmony"
    StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <Style TargetType="{x:Type Window}">
                <Setter Property="FontFamily" Value="Tahoma" />
            </Style>

            <FontFamily x:Key="FlowCircularRegular">Fonts/#Flow Circular Regular</FontFamily>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="Themes/DarkModeColors.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>

                <ResourceDictionary Source="Themes/Consts.xaml" />

                <ResourceDictionary Source="Styles/HexButton.xaml" />
                <ResourceDictionary Source="Styles/Checkbox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
